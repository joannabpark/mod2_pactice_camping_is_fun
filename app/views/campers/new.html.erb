<h1>New Camper Signup</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
<% end %>
<% end %>

<%= form_for (@camper) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br><br>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.submit %>
    <% end %>