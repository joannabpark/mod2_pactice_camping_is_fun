<h1>New Activity Signup</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
<% end %>
<% end %>

<%= form_for (@signup) do |f| %>
    <%= f.collection_select(:camper_id, Camper.all, :id, :name) %><br><br>
    <%= f.collection_select(:activity_id, Activity.all, :id, :name) %><br><br>

    <%= f.label :time %>
    <%= f.time_field :time%><br><br>

    <%= f.submit %>
    <% end %>